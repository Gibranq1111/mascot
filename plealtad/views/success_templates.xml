<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Template de Verificación Exitosa -->
    <template id="verification_success" name="Verificación Exitosa">
        <t t-call="website.layout">
            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-lg-6 col-md-8">
                        <div class="card">
                            <div class="card-header bg-success text-white">
                                <h3 class="mb-0">¡Verificación Exitosa!</h3>
                            </div>
                            <div class="card-body text-center">
                                <i class="fa fa-check-circle fa-5x text-success mb-3"></i>
                                <h4 class="mb-3" t-esc="message"/>
                                <a href="/plealtad/login" class="btn btn-primary btn-lg">
                                    Iniciar Sesión
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Template de Error de Verificación -->
    <template id="verification_error" name="Error de Verificación">
        <t t-call="website.layout">
            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-lg-6 col-md-8">
                        <div class="card">
                            <div class="card-header bg-danger text-white">
                                <h3 class="mb-0">Error de Verificación</h3>
                            </div>
                            <div class="card-body text-center">
                                <i class="fa fa-exclamation-circle fa-5x text-danger mb-3"></i>
                                <h4 class="mb-3" t-esc="error_message"/>
                                <a href="/plealtad/register" class="btn btn-primary btn-lg">
                                    Volver al Registro
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>